<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/detail.css' />
    <title>Detail</title>
</head>
<body>
    <h1><%=place.name%></h1>
    <div class="container">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
              <!-- Indicators -->   
              <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
              </ol>
          
              <!-- Wrapper for slides -->
              <div class="carousel-inner">
                <div class="item active">
                <figure class="imgcontainer">
                  <img class="carrusel" src="/images/articbar.png" alt="Los Angeles">
                </figure>
                </div>
          
                <div class="item">
                <figure class="imgcontainer">
                  <img class="carrusel" src="/images/artic-bar-medium.png" alt="Chicago">
                </figure>
                </div>
              
                <div class="item">
                <figure class="imgcontainer">
                  <img class="carrusel" src="/images/reviewartic.jpg" alt="New york">
                </figure>
                </div>
              </div>
          
              <!-- Left and right controls -->
              <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
            <br>
       <ul>
           <% for (var i=Object.keys(place.schedule).length-1; i>=0; i--){%>
              <li><%=Object.keys(place.schedule)[i]%> : <%=place.schedule[Object.keys(place.schedule)[i]].opening%> to <%=place.schedule[Object.keys(place.schedule)[i]].closing%></li>
           <%}%>
           <li>Historia: <%=place.description%></li>
           <li>Tipo: <%=place.type%></li>
           <li>Cover: <%=place.pricing.cover%></li>
       </ul>
    </div>
    <div class="review-container">
      <% place.reviews.forEach(function(review){%>
        <div class="review">
          <img src=<%=review.creatorPicPath%>>
          <strong><%=review.creatorName%> rated: <%= review.rating %>/5</strong>
          <% if (review.music==1){ %>
              <img src="/images/top40.png">
          <%} else if (review.music==2){%>
            <img src="/images/reggaeton.png">
            <%} else if (review.music==3){%>
              <img src="/images/electronic.png">
            <%}%>
            <% if (review.crowded==1){ %>
              <img src="/images/fullCrowd.png">
          <%} else if (review.crowded==2){%>
            <img src="/images/averageCrowd.png">
            <%} else if (review.crowded==3){%>
              <img src="/images/empty.png">
            <%}%>
        </div>
      <%})%>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

</body>
</html>