      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBkS2ZKYa3xtCIJpDDZxsGbbzjG2Yobrww&libraries=places">
    </script>

<script type="text/javascript" src="/javascripts/events.js"></script>
</html>